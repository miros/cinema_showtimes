<% form_for(@movie_visit) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :movie_id, 'Фильм' %><br />

    <% if @movie_visit.movie_id %>
        <%= @movie_visit.movie.name %>
        <%= f.hidden_field :movie_id %>
    <% else %>
       <%= f.collection_select(:movie_id, Movie.all(:order => 'name'), :id, :name) %>
    <% end %>

  </p>
  <p>
    <%= f.label :cinema_id, 'Кинотеатр' %><br />
    <%= f.collection_select(:cinema_id, Cinema.all(:order => 'name'), :id, :name, {}, {:class => 'cinema_select'}) %>
  </p>
  <p>
    <%= f.label :date, 'Дата' %><br />
    <%= f.date_select :date, :include_blank => true %>
  </p>
  <p>
    <%= f.submit 'Создать' %>
  </p>
<% end %>