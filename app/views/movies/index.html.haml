#sort_by
  <b>Сортировать по:</b>
  %br
  =link_to_unless_current('По имени', :overwrite_params => {:order => 'by_name'})
  %br
  =link_to_unless_current('По популярности', :overwrite_params => {:order => 'by_popularity'})
